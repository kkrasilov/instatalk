<p id="notice"><%= notice %></p>

<div class='row'>
  <div class='col-8'>
    <h1>Rooms</h1>

    <ul class="mt-4 list-unstyled">
      <%= render @rooms %>
    </ul>

    <div class="mt-2">
      <%= render 'rooms/form', room: @room %>
    </div>
  </div>

  <div class="online col-4 border-left">
    <h4>online users:</h4>

    <ul id="online">
      <% @users.online.each do |user| %>
      <li><%= user.nickname %></li>
      <% end %>
    </ul>
  </div>
</div>
